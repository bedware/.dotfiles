#!/bin/bash

tmux kill-server
# tmux new-session -d -s settings -n nvim -c exec pwsh -wd /home/bedware/.local -c vi .
tmux new-session -d -s settings -n nvim -c exec pwsh -Interactive -wd /home/bedware/.local
# tmux rename-window -t settings nvim
tmux new-window -t settings -n tmux -c exec pwsh -Interactive -wd ~/.dotfiles/
sleep 1
tmux send-keys -t settings:nvim '.ne' Enter
tmux send-keys -t settings:tmux '.fe' Enter

tmux attach -t settings
 
# Ctrl-B :
# setw synchronize-panes on
# clear history
