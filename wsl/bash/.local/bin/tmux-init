#!/usr/bin/env bash

tmux kill-server
tmux new-session -d -s settings -n nvim -c exec pwsh -Interactive -wd ~/.dotfiles
tmux new-window -t settings -n tmux -c exec pwsh -Interactive -wd ~/.dotfiles
sleep 1
tmux send-keys -t settings:nvim '.ne' Enter
tmux send-keys -t settings:tmux '.fe' Enter

tmux-sessionizer $1

