set $mode_display Choose monitor mode - (Default) Internal (i), Duplicate (d), Expand (e)

mode "$mode_display" {
    bindsym i exec --no-startup-id sh "$HOME/.config/X11/internal.sh", mode "default"
    bindsym d exec --no-startup-id sh "$HOME/.config/X11/duplicate.sh", mode "default"
    bindsym e exec --no-startup-id sh "$HOME/.config/X11/expand.sh", mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"       
}   
bindsym $mod+p mode "$mode_display"
